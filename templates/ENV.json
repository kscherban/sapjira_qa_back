{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "adminUsername": {
        "type": "string",
        "metadata": {
          "description": "Username for the Virtual Machine."
        }
      },
      "adminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Password for the Virtual Machine."
        }
      },
      "nicName": {
        "type": "string",
        "metadata": {
          "description": "Network interface name"
        }
      }
    },
    "variables": {
      "namespace": "jira"
    },
    "resources": [
      {
        "apiVersion": "2017-05-10",
        "name": "storage",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "TemplateLink": {
             "uri": "https://raw.githubusercontent.com/kscherban/sapjira_qa_back/master/templates/storage.json"
            },
            "parameters":{
              "storageNamePrefix": {
                "value": "storage"
              }
            }
          }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "network",
      "type": "Microsoft.Resources/deployments",
      "properties": {
          "mode": "Incremental",
          "TemplateLink": {
           "uri": "https://raw.githubusercontent.com/kscherban/sapjira_qa_back/master/templates/network.json"
          }
      }
  },     
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "myVM",
      "location": "West Europe",
      "dependsOn": [
        "network"
      ],
      "properties": {
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "hardwareProfile": { "vmSize": "Standard_A0" },
        "osProfile": {
          "computerName": "myVM",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
            "version": "latest"
          },
          "osDisk": {
            "name": "myManagedOSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        }
      }
    }
    ],
    "outputs": {  }
  }
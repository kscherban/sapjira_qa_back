{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "adminUsername": {
        "type": "string",
        "metadata": {
          "description": "Username for the Virtual Machine."
        }
      },
      "adminPassword": {
        "type": "securestring",
        "metadata": {
          "description": "Password for the Virtual Machine."
        }
      },
      "storageNamePrefix": {
        "type": "string",
        "maxLength": 11,
        "defaultValue": "storage",
        "metadata": {
          "description": "Test storage"
        }
      }
    },
    "variables": {
      "namespace": "jira",
      "storageName": "[concat(parameters('storageNamePrefix'), uniqueString(resourceGroup().id))]"
    },
    "resources": [
      {
        "apiVersion": "2017-05-10",
        "name": "storage",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "TemplateLink": {
             "uri": "https://raw.githubusercontent.com/kscherban/sapjira_qa_back/master/templates/storage.json"
            }
          }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "network",
      "type": "Microsoft.Resources/deployments",
      "properties": {
          "mode": "Incremental",
          "TemplateLink": {
           "uri": "https://raw.githubusercontent.com/kscherban/sapjira_qa_back/master/templates/network.json"
          }
      }
  },     
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "myVM",
      "location": "West Europe",
      "dependsOn": [
        "[variables('nicName')]"
      ],
      "properties": {
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
            }
          ]
        },
        "hardwareProfile": { "vmSize": "Standard_A0" },
        "osProfile": {
          "computerName": "myVM",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
            "version": "latest"
          },
          "osDisk": {
            "name": "myManagedOSDisk",
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        }
      }
    }
    ],
    "outputs": {  }
  }
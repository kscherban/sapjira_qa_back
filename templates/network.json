{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "subnetName": "Subnet",
        "virtualNetworkName": "MyVNET",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), variables('subnetName'))]"
    },
    "parameters": {
        "nicName": {
            "type": "string"
          },
          "virtualNetworkName": {
              "type": "string"
          }
    },
"resources": [
{
    "comments": "Public IP Address Resource",
    "apiVersion": "2015-06-15",
    "type": "Microsoft.Network/publicIPAddresses",
    "name": "[parameters('nicName')]",
    "location": "West Europe",
    "properties": {
      "publicIPAllocationMethod": "Dynamic"
    }
  }, 
  {
    "apiVersion": "2016-03-30",
    "type": "Microsoft.Network/networkInterfaces",
    "name": "[parameters('nicName')]",
    "location": "West Europe",
    "dependsOn": [
      "[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
      "[concat('Microsoft.Network/publicIPAddresses/', parameters('nicName'))]"
    ],
    "properties": {
      "ipConfigurations": [
        {
          "name": "[concat('ipconfig-', parameters('nicName'))]",
          "properties": {
            "publicIPAddress": {
              "id": "[resourceId ('Microsoft.Network/publicIPAddresses/', parameters('nicName'))]"
            },
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[variables('subnetRef')]"
            }
          }
        }
      ]
    }
  }
]
}